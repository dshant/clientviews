<div class="bg-soft-primary">
    <div class="row">
        <div class="col-7">
            <div class="text-primary p-4">
                <h5 class="text-primary">Welcome!</h5>
                <p>Sign up to begin using <span class="tomorrow-text">Userveys</span>.</p>
            </div>
        </div>
    </div>
</div>
<div class="card-body pt-0">
  <div>
      <a href="">
          <div class="avatar-md profile-user-wid mb-4">
              <span class="avatar-title rounded-circle bg-dark">
                  <span class="tomorrow-text font-weight-bolder" style="font-size:28px;">U</span>
              </span>
          </div>
      </a>
  </div>
  <div class="p-2">
      <%= button_to user_google_oauth2_omniauth_authorize_path(state: params[:plan]), class: 'btn btn-outline-primary btn-block' do %>
        <img src="/images/g.svg" />Sign up with Google
      <% end %>
      <div class="my-4 text-center">- or -</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= hidden_field_tag 'plan', params[:plan] %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <%= f.fields_for :account do |account| %>
            <div class="form-group">
                <%= account.label :name, "Account Name" %>
                <%= account.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: 'Account Name' %>
            </div>
          <% end %>

          <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email,  autocomplete: "email", class: 'form-control', placeholder: 'Enter Email' %>
          </div>

          <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Enter password' %>
          </div>

          <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Re-type your password' %>
          </div>

          <div class="mt-3">
              <%= f.submit "Sign Up", class: "btn btn-primary btn-block waves-effect waves-light" %>
          </div>

          <%= render "devise/shared/links" %>
      <% end %>
  </div>

</div>
