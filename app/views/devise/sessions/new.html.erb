<div class="bg-soft-primary">
    <div class="row">
        <div class="col-7">
            <div class="text-primary p-4">
                <h5 class="text-primary">Welcome Back !</h5>
                <p>Sign in to continue to <span class="tomorrow-text">Userveys</span>.</p>
            </div>
        </div>
    </div>
</div>
<div class="card-body pt-0">
  <div>
      <a href="https://userveys.com">
          <div class="avatar-md profile-user-wid mb-4">
              <span class="avatar-title rounded-circle bg-dark">
                  <span class="tomorrow-text font-weight-bolder" style="font-size:28px;">U</span>
              </span>
          </div>
      </a>
  </div>
  <div class="p-2">
    <%= button_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-outline-primary btn-block' do %>
      <img src="/images/g.svg" />Sign in with Google
    <% end %>
    <div class="my-4 text-center">- or -</div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <% unless flash.empty? %>
          <span class="p-3" style="color: red;"><%= flash[:alert].to_s %></span>
        <% end %>

          <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter Email' %>
          </div>

          <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Enter password' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="custom-control custom-checkbox">
              <%= f.check_box :remember_me, class: "custom-control-input" %>
              <%= f.label :remember_me, class: "custom-control-label" %>
            </div>
          <% end %>

          <div class="mt-3">
              <%= f.submit "Log in", class: "btn btn-primary btn-block waves-effect waves-light" %>
          </div>

          <%= render "devise/shared/links" %>
      <% end %>
  </div>

</div>
