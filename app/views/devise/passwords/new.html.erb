

<div class="bg-soft-primary">
    <div class="row">
        <div class="col-11">
            <div class="text-primary p-4">
                <h5 class="text-primary">Reset Password</h5>
                <p>Reset your password to get back into <span class="tomorrow-text">PF</span>.</p>
            </div>
        </div>
    </div>
</div>
<div class="card-body pt-0">
  <div>
      <a href="https://PF.to">
          <div class="avatar-md profile-user-wid mb-4">
              <span class="avatar-title rounded-circle bg-dark">
                  <span class="tomorrow-text font-weight-bolder" style="font-size:28px;">I</span>
              </span>
          </div>
      </a>
  </div>
  <div class="p-2">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter Email' %>
          </div>

          <div class="mt-3">
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block waves-effect waves-light" %>
          </div>

          <%= render "devise/shared/links" %>
      <% end %>
  </div>

</div>
