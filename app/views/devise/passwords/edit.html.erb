
<div class="bg-soft-primary">
    <div class="row">
        <div class="col-11">
            <div class="text-primary p-4">
                <h5 class="text-primary">Update Password</h5>
                <p>Change your password to get back into <span class="tomorrow-text">Userveys</span>.</p>
            </div>
        </div>
    </div>
</div>
<div class="card-body pt-0">
  <div>
      <a href="https://PF.to">
          <div class="avatar-md profile-user-wid mb-4">
              <span class="avatar-title rounded-circle bg-dark">
                  <span class="tomorrow-text font-weight-bolder" style="font-size:28px;">U</span>
              </span>
          </div>
      </a>
  </div>
  <div class="p-2">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
              <%= f.label :password, "New password" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: 'Enter password' %>
          </div>

          <div class="form-group">
              <%= f.label :password_confirmation, "Confirm new password" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Re-type your password' %>
          </div>

          <div class="mt-3">
              <%= f.submit "Change my password", class: "btn btn-primary btn-block waves-effect waves-light" %>
          </div>

          <%= render "devise/shared/links" %>
      <% end %>
  </div>

</div>
