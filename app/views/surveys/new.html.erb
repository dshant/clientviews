<%= content_for :header_content do %>
  <%= link_to dashboard_index_path, class: 'd-inline-block', data: {toggle: 'tooltip'}, title: 'Back to Dashboard' do %>
    <h6><i class="fal fa-arrow-left mr-2"></i></h6>
  <% end %>
  <h5 class="d-inline-block ml-1 mr-5">New Survey</h5>

<% end %>

<div class="row">
  <div class="col col-lg-8">
    <%= render partial: 'form', locals: {survey: @survey} %>
  </div>
  <div class="col col-lg-4">
    <h4 class="card-header mt-0" style="margin-bottom: -.75rem;">Survey Preview</h4>
    <div id="preview_container">

      <%= render partial: 'preview' %>
    </div>
  </div>
</div>
