<div class="row">
  <div class="col-12">
      <div class="card">
        <h5 class="card-header bg-transparent border-bottom text-uppercase ">Webhook Settings</h5>
        <div class="card-body">
          <%= form_with(model: @webhook, class: 'form') do |f| %>
            <div class="form-group row mb-4">
              <%= f.label :name, 'Name',  class: 'col-sm-2 col-form-label' %>
              <div class="col-sm-10">
                <%= f.text_field :name, {class: 'form-control w-75 d-inline'} %>
                <p class="text-muted my-0">
                    Nickname for your Webhook
                </p>
              </div>
            </div>
            <div class="form-group row mb-4">
              <%= f.label :url, 'Destination',  class: 'col-sm-2 col-form-label' %>
              <div class="col-sm-10">
                <%= f.text_field :url, {class: 'form-control w-75 d-inline'} %>
                <p class="text-muted my-0">
                    URL where you want to POST the JSON payload. Use full 'https://web.com' address and we suggest using HTTPS.
                </p>
              </div>
            </div>
            <div class="form-group row mb-4">
              <%= f.label :token, 'Secret Token',  class: 'col-sm-2 col-form-label' %>
              <div class="col-sm-10">
                <%= f.text_field :token, {class: 'form-control w-75 d-inline'} %>
                <p class="text-muted my-0">
                    Optional string to be sent in the HTTP header <code>HTTP-UHOOK-SECRET</code> to verify your webhook.
                </p>
              </div>
            </div>
            <div class="my-5">
              <% if @webhook.id.present? %>
                <%= f.submit "Update Webhook", class: 'btn btn-primary w-md' %>
              <% else %>
                <%= f.submit "Create Webhook", class: 'btn btn-primary w-md' %>
              <% end %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
